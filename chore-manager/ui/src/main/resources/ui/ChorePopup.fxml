<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<GridPane fx:id="scene" alignment="CENTER" hgap="10.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="854.0" stylesheets="@Style.css" vgap="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.ChorePopupController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox prefHeight="373.0" prefWidth="413.0">
         <children>
            <Label fx:id="choreName" prefHeight="17.0" prefWidth="351.0" styleClass="menuHeader" stylesheets="@Style.css" text="Chore Name" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="0.0" text="Status:">
                     <styleClass>
                        <String fx:value="whiteText" />
                        <String fx:value="roundedBorderLeft" />
                     </styleClass>
                  </Label>
                  <CheckBox fx:id="checkbox" mnemonicParsing="false" onAction="#updateChecked">
                     <styleClass>
                        <String fx:value="checkbox" />
                        <String fx:value="roundedBorderRight" />
                     </styleClass>
                  </CheckBox>
               </children>
            </HBox>
            <Text fx:id="assigneeText" strokeType="OUTSIDE" strokeWidth="0.0" text="Assignee: Person" />
            <Text fx:id="deadline" strokeType="OUTSIDE" strokeWidth="0.0" text="Deadline: 03/10" />
            <Text fx:id="points" strokeType="OUTSIDE" strokeWidth="0.0" text="Points: 0" />
            <HBox prefHeight="100.0" prefWidth="200.0" styleClass="columnDistance">
               <children>
                  <Button mnemonicParsing="false" onAction="#toMain" stylesheets="@Style.css" text="Go back">
                     <styleClass>
                        <String fx:value="header" />
                        <String fx:value="hoverClass" />
                        <String fx:value="roundedBorder" />
                        <String fx:value="staticButton" />
                     </styleClass>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#delete" stylesheets="@Style.css" text="Delete chore">
                     <styleClass>
                        <String fx:value="header" />
                        <String fx:value="hoverClass" />
                        <String fx:value="roundedBorder" />
                        <String fx:value="staticButton" />
                        <String fx:value="redButton" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
         <styleClass>
            <String fx:value="roundedBorder" />
            <String fx:value="menuBackground" />
            <String fx:value="rowDistance" />
         </styleClass>
      </VBox>
   </children>
</GridPane>
